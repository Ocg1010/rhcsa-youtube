# CREAR UN ENLACE DURO MISMO INODO
ln link_duro link_duro_copia
ls -il

# CREAR UN ENLACE DURO ENTREA ARCHIVOS EN DISTINTO DIRECTOIO Y CON UNA RUTA RELATIVA
vim link_duro2
ln link_duro ../practica3/link_duro_copia2
#NO SE PUEDE CREAR ENLACES DUROS ENTRE DIRECTORIOS


# CREAR UN ENLACE SIMBOLICO EN EL MISMO DIRECTORIO 
ln -s simbolico1 simbolico1_copia
# LOS LINKS SIMBOLICOS NO ACEPTAN RUTA RELATIVA




